{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "build"

  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
